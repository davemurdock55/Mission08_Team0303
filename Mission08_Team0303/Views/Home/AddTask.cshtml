@{
    ViewData["Title"] = "Add Task";
}

@model Mission08_Team0303.Models.Tasks
<div>
    <form method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="task">Task:</label>
        <input asp-for="task" /><br />

        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" /><br />

        <label asp-for="Quadrant">Quadrant:</label>
        <input asp-for="Quadrant" /><br />

        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category m in ViewBag.Categories)
            {
                <option value="@m.CategoryId">@m.CategoryName</option>
            }
        </select><br />

        <label asp-for="Completed">Completed:</label>
        <select asp-for="Completed">
            <option value="true">True</option>
            <option value="false">False</option>
        </select><br />

        <button type="submit">Submit Task</button>
    </form>
</div>