@{
    ViewData["Title"] = "Home";
}

<div class="page-header text-center" id="banner">
    <div class="row">
        <div class="col-12 mt-3">
            <h1>To-Do</h1>
            <p class="lead">A to-do list set up into four quadrants</p>
        </div>
    </div>
</div>


<div class="container d-flex justify-content-center">
    <div class="row mx-3">
        @* Important and Urgent *@
        <div class="card text-white bg-danger m-3 mx-auto p-0">
            <div class="card-header d-flex justify-content-between">Urgent | Important <span>Quadrant 1</span></div>
            <div class="card-body">
                <h3 class="card-title">Tasks</h3>
                <table class="table table-hover table-danger">
                    <thead>
                        <tr>
                            <th scope="col">Type</th>
                            <th scope="col">Column heading</th>
                            <th scope="col">Column heading</th>
                            <th scope="col">Column heading</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Default</th>
                            <td>Column content</td>
                            <td>Column content</td>
                            <td>Column content</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        @* Important, but not Urgent *@
    <div class="card text-white bg-warning m-3 mx-auto p-0">
        <div class="card-header d-flex justify-content-between">Urgent | Not Important <span>Quadrant 3</span></div>
        <div class="card-body">
            <h3 class="card-title">Warning card title</h3>
            <table class="table table-hover table-warning">
                <thead>
                    <tr>
                        <th scope="col">Type</th>
                        <th scope="col">Column heading</th>
                        <th scope="col">Column heading</th>
                        <th scope="col">Column heading</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">Default</th>
                        <td>Column content</td>
                        <td>Column content</td>
                        <td>Column content</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    </div>

    <div class="row mx-3">
        @* Urgent, but not Important *@
        <div class="card text-white bg-info m-3 mx-auto p-0">
            <div class="card-header d-flex justify-content-between">Not Urgent | Important <span>Quadrant 2</span></div>
            <div class="card-body">
                <h3 class="card-title">Info card title</h3>
                <table class="table table-hover table-info">
                    <thead>
                        <tr>
                            <th scope="col">Type</th>
                            <th scope="col">Column heading</th>
                            <th scope="col">Column heading</th>
                            <th scope="col">Column heading</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Default</th>
                            <td>Column content</td>
                            <td>Column content</td>
                            <td>Column content</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        @* Not Urgent, and not Importent *@
        <div class="card text-white bg-primary m-3 mx-auto p-0">
            <div class="card-header d-flex justify-content-between">Not Urgent | Not Important <span>Quadrant 4</span></div>
            <div class="card-body">
                <h3 class="card-title">Primary card title</h3>
                <table class="table table-hover table-primary">
                    <thead>
                        <tr>
                            <th scope="col">Type</th>
                            <th scope="col">Column heading</th>
                            <th scope="col">Column heading</th>
                            <th scope="col">Column heading</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Default</th>
                            <td>Column content</td>
                            <td>Column content</td>
                            <td>Column content</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
